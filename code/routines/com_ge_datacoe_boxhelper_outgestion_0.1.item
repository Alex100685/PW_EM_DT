	public static String fixBadNames(String boxObjectName) {
		String forReturn = boxObjectName.replace("\\","_").replace("/","_").replace("\"","_")
		.replace("*","_").replace("?","_").replace("<","_")
		.replace(">","_").replace("|","_").replace("&","_")
		.replaceAll("[^\\x00-\\x7F]", "");
		if(forReturn.matches("^[0-9|.| |\\-]*$") ) { return forReturn+"_"; }
		return forReturn;
	}

	
