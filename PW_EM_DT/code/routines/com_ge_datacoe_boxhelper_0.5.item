    public static String createBoxFileTimeout (String clientId, String clientSecret, String SSO, String folderId, String fileName, String fileLocation) throws Exception {
        ExecutorService executor = Executors.newSingleThreadExecutor();
        routines.com_ge_datacoe_boxhelper asdf = new routines.com_ge_datacoe_boxhelper();
        Task fileUpload = asdf.new Task(clientId,  clientSecret,  SSO,  folderId,  fileName,  fileLocation);
        
        Future<String> future = executor.submit(fileUpload);
        
        File timeoputFile = new File(fileLocation);
        //Timeout set to 0.5Mbit/s + 60 seconds
        double megaBits = 0.5;
        double additionalTime = 60;
        
        long timeOut = (long)(timeoputFile.length()*8/1024/1024/megaBits + additionalTime);
        try {
            log.info("Started to upload file in background File - "+ fileLocation);
            log.info("Finished! - "+future.get(timeOut, TimeUnit.SECONDS));
        } catch (TimeoutException e) {
            future.cancel(true);
            log.fatal("File upload timed out! - " + fileLocation);
        }
        executor.shutdownNow();

        //RETRY
        if(fileUpload.getBoxFileId() == null) {
        	executor = Executors.newSingleThreadExecutor();
        	future = executor.submit(fileUpload);
            try {
            	log.info("Started to upload file in background File - "+ fileLocation);
                log.info("Finished! - "+ future.get(timeOut, TimeUnit.SECONDS));
            } catch (TimeoutException e) {
                future.cancel(true);
                log.fatal("File upload timed out! - " + fileLocation);
            }
            executor.shutdownNow();
        }
        
        return fileUpload.getBoxFileId();
    }
    
